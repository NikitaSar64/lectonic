.customer-steps__wrapper {
  display: flex
  align-items: center
  flex-direction: column
  width: 100%
  .customer-steps__radio {
    display: flex
    justify-content: center
    .customer-steps__choose-subrole {
      display: flex
      transform: translateX(-20px)
      .customer, .company {
        display: flex
        align-items: center
        cursor: pointer
        .customer-steps__radio-button {
          display: flex
          justify-content: center;
          align-items: center
          width: 16px
          height: 16px
          border-radius: 50%
          box-shadow: inset 0 0 10px rgba(0, 6, 32, 0.3);
          .active {
            width: 6px
            height: 6px
            background-color: black
            border-radius: 50%
          }
        }
        span {
          margin-left: 8px
          margin-right: 20px
        }
      }
    }
  }
}
