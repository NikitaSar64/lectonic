@import '~/variables';

.container{
    box-sizing: border-box;
    padding: 0 60px;
    width: 100%
}

.rolepage__header{
    padding-top: 29px;
    height: 275px;
    .rolepage__option{
        padding: 10px 10px 10px 60px;
        max-width: 114px;
        box-sizing: border-box;
        background: #0025FF;
        span{
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 700;
            font-size: 11px;
            line-height: 13px;
            text-align: center;
            color: #FFFFFF;
        }
    }
}

.rolepage__title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 31px 0;
}

.rolepage__title-box{
    button{
        border-radius: 30px;
        border: none;
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        color: #FFFFFF;
        cursor: pointer;
    }
    span{
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 500;
        font-size: 44px;
        line-height: 54px;
        color: #000000;
        margin-right: 13px;
    }
    .btn-first{
        background: #00D378;
        padding: 14px 28px;
        margin-right: 39px;
    }
    .btn-second{
        background: #B924FF;
        padding: 14px 83px;
    }
}

.rolepage__section{
    span{
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 400;
        font-size: 24px;
        line-height: 29px;
        color: #000000;
    }
}

.rolepage__img-wrapper{
    margin-top: 12px;
    width: 36%;
    height: 270px;
    background: #fff;
    border-radius: 18px;
    img{
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 18px;
    }
}

.rolepage__about{
    margin: 40px 0;
    span{
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 20px;
        text-align: center;
        color: #000000;
    }
}

.rolepage__line{
    margin-top: 21px;
    margin-bottom: 47px;
    width: 100%;
    height: 1px;
    background: #DBDBDB;
    border-radius: 18px;
}

.rolepage__lecture{
    margin: 40px 0;
    span{
        margin-right: 66px;
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 20px;
        text-align: center;
        color: #000000;
        cursor: pointer;
    }
    .no-active{
    opacity: 0.3;
    }
    .workroom-card__box{
        margin: 0 0 40px 0;
        width: 290px;
    }
    .workroom-card__box-wrapper{
        padding: 20px 45px;
        span{
            margin: 0;
        }
    }
    .workroom-card__box-btn{
        width: 70%
    }
}

@media screen and (max-width: $middle-screen) {
    .rolepage__img-wrapper{
        height: 232px;
    }
}

@media screen and (max-width: $small-screen) {
    .rolepage__img-wrapper{
        height: 217px;
    }
    .rolepage__line{
        margin-bottom: 41px;
    }
    .rolepage__lecture{
        .workroom-card__box{
            width: 255px;
        }
        .workroom-card__box-wrapper{
            padding: 20px 28px;
        }
        .workroom-card__box-btn{
            width: 80%
        }   
    }
}



